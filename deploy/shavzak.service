[Unit]
Description=Gunicorn instance to serve Shavzak API
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/shavzak/back
Environment="PATH=/var/www/shavzak/back/venv/bin"
Environment="SECRET_KEY=7f8a9d1c2b3e4f5a6b7c8d9e0f1a2b3c4d5e6f7a8b9c0d1e2f3a4b5c6d7e8f9"
Environment="DEBUG=False"
ExecStart=/var/www/shavzak/back/venv/bin/gunicorn --workers 3 --bind unix:shavzak.sock -m 007 wsgi:app

[Install]
WantedBy=multi-user.target
